        <!-- Content Section -->
        <section>
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <table class="table table-hover">
                            <thead>
                              <tr>
                                <th>Representative</th>
                                <th>State</th>
                                <th>Party</th>
                                <th>Phone Number</th>
                                <th>Website</th>
                              </tr>
                            </thead>
                            <!--Where the results will be pushed up-->
                            <tbody>
                                {{#each reps}}
                                    <tr>
                                        <td>
                                            <form action="/votery/representative_profile" method="post" name="id" value="{{this.id}}"><button type="submit">{{this.fullName}}</button></form>
                                        </td>
                                        <td>
                                            {{this.state}}
                                        </td>
                                        <td>
                                            {{this.party}}
                                        </td>
                                        <td>
                                            {{this.phoneNumber}}
                                        </td>      
                                        <td>
                                            <a href="{{this.url}}" target="_blank">{{this.url}}</a>
                                        </td>                                                                  
                                    </tr>
                                {{/each}}
                            </tbody>
                        </table>
